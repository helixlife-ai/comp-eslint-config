{
  "name": "@bobby/eslint-config",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.14.0",
  "description": "ESLint config for Bobby",
  "author": "Bobby <bobbylin23@163.com>",
  "license": "MIT",
  "keywords": [
    "eslint",
    "config"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm typegen && unbuild",
    "dev": "pnpm typegen && pnpm inspect",
    "inspect": "pnpx @eslint/config-inspector@latest",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "nr build",
    "release": "bumpp && pnpm publish",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "typegen": "tsx scripts/type-gen.ts"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "typescript": ">=4.8.4"
  },
  "dependencies": {
    "@eslint-react/eslint-plugin": "^1.52.3",
    "@eslint/js": "^9.32.0",
    "@stylistic/eslint-plugin": "^5.2.2",
    "@typescript-eslint/types": "^8.39.0",
    "defu": "catalog:",
    "eslint": "catalog:lint",
    "eslint-config-flat-gitignore": "catalog:lint",
    "eslint-plugin-antfu": "^3.1.1",
    "eslint-plugin-command": "^3.3.1",
    "eslint-plugin-hyoban": "^0.6.1",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-package-json": "^0.51.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-google-translate": "^0.1.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-regexp": "^2.9.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tailwindcss": "npm:@hyoban/eslint-plugin-tailwindcss@4.0.0-alpha.12",
    "eslint-plugin-unicorn": "^60.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.3.0",
    "jsonc-eslint-parser": "^2.4.0",
    "local-pkg": "catalog:",
    "typescript-eslint": "catalog:lint"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:cli",
    "@antfu/ni": "catalog:cli",
    "@antfu/utils": "catalog:inlined",
    "@types/eslint-plugin-tailwindcss": "^3.17.0",
    "@types/node": "catalog:types",
    "bumpp": "catalog:cli",
    "eslint-typegen": "^2.3.0",
    "lint-staged": "catalog:cli",
    "simple-git-hooks": "catalog:cli",
    "tinyexec": "catalog:utils",
    "tsx": "catalog:cli",
    "typescript": "catalog:cli",
    "unbuild": "catalog:cli",
    "vite": "catalog:cli",
    "vitest": "catalog:testing",
    "vitest-package-exports": "catalog:testing",
    "yaml": "catalog:testing"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}

{
  "name": "@helix/eslint-config",
  "type": "module",
  "version": "0.0.2",
  "packageManager": "pnpm@10.14.0",
  "description": "ESLint config for Bobby",
  "author": "Bobby <bobbylin23@163.com>",
  "license": "MIT",
  "keywords": [
    "eslint",
    "config"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "@helix/eslint-config": "dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm typegen && unbuild",
    "dev": "pnpm typegen && pnpm inspect",
    "inspect": "pnpx @eslint/config-inspector@latest",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "nr build",
    "release": "bumpp && pnpm publish",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "typegen": "tsx scripts/type-gen.ts"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "typescript": ">=4.8.4"
  },
  "dependencies": {
    "@eslint-react/eslint-plugin": "catalog:lint",
    "@eslint/js": "catalog:lint",
    "@stylistic/eslint-plugin": "catalog:lint",
    "@typescript-eslint/types": "catalog:lint",
    "defu": "catalog:",
    "eslint": "catalog:lint",
    "eslint-config-flat-gitignore": "catalog:lint",
    "eslint-plugin-antfu": "catalog:lint",
    "eslint-plugin-command": "catalog:lint",
    "eslint-plugin-hyoban": "catalog:lint",
    "eslint-plugin-import-x": "catalog:lint",
    "eslint-plugin-jsonc": "catalog:lint",
    "eslint-plugin-package-json": "catalog:lint",
    "eslint-plugin-prettier": "catalog:lint",
    "eslint-plugin-react-google-translate": "catalog:lint",
    "eslint-plugin-react-hooks": "catalog:lint",
    "eslint-plugin-react-refresh": "catalog:lint",
    "eslint-plugin-regexp": "catalog:lint",
    "eslint-plugin-simple-import-sort": "catalog:lint",
    "eslint-plugin-tailwindcss": "catalog:lint",
    "eslint-plugin-unicorn": "catalog:lint",
    "eslint-plugin-unused-imports": "catalog:lint",
    "globals": "catalog:lint",
    "jsonc-eslint-parser": "catalog:lint",
    "local-pkg": "catalog:",
    "typescript-eslint": "catalog:lint"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:cli",
    "@antfu/ni": "catalog:cli",
    "@antfu/utils": "catalog:inlined",
    "@types/eslint-plugin-tailwindcss": "catalog:types",
    "@types/node": "catalog:types",
    "bumpp": "catalog:cli",
    "eslint-typegen": "catalog:cli",
    "lint-staged": "catalog:cli",
    "simple-git-hooks": "catalog:cli",
    "tinyexec": "catalog:utils",
    "tsx": "catalog:cli",
    "typescript": "catalog:cli",
    "unbuild": "catalog:cli",
    "vite": "catalog:cli",
    "vitest": "catalog:testing",
    "vitest-package-exports": "catalog:testing",
    "yaml": "catalog:testing"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
